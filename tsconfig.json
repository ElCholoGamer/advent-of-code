{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"lib": ["ESNext"],
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"removeComments": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"transpileOnly": true
	}
}
